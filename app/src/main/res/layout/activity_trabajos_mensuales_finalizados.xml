<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Trabajos_Mensuales_Finalizados">
    <include
        android:id="@+id/my_toolbar_trabajos_mensuales_finalizados"
        layout="@layout/actionbar">
    </include>
    <TextView
        android:layout_below="@id/my_toolbar_trabajos_mensuales_finalizados"
        android:id="@+id/textViewMonthlyWorkFinished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/submenu_monthly_work_finished"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayoutMonthlyTaskFinished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMonthlyWorkFinished">

        <TextView
            android:id="@+id/textViewType_Finished"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/type"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_DateStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/fecha_inicio"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_DateFinished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/fecha_finalizacion"
            android:textSize="18sp" />
    </LinearLayout>
<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/refresh_tareas_mensuales_finalizadas"
    android:layout_below="@+id/linearLayoutMonthlyTaskFinished"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMonthlyTaskFinished"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

</android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>